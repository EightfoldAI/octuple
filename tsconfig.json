{
  "compilerOptions": {
      "declaration": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "noUnusedParameters": true,
      "outDir": "lib",
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "lib": [
          "es5",
          "es2015.promise",
          "dom"
      ]
  },
  "include": [ "src/**/*" ]
}